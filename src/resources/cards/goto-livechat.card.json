{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "${message}",
            "spacing": "Medium",
            "wrap": true
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "YES",
            "style": "positive",
            "data": {
                "choice": "redirectToLiveChat"
            }
        },
        {
            "type": "Action.Submit",
            "title": "NO",
            "style": "destructive",
            "data": {
                "choice": "restartDialog"
            }
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.0"
}
